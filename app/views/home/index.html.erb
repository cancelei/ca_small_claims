<% content_for :title, "California Small Claims Court Forms - Free Online Form Filler" %>

<!-- Hero Section -->
<div class="text-center mb-12">
  <h1 class="text-4xl font-bold text-gray-900 mb-4">
    California Small Claims Court Forms
  </h1>
  <p class="text-xl text-gray-600 max-w-2xl mx-auto">
    Fill out your court forms online, for free. Generate print-ready PDFs without any account required.
  </p>
</div>

<!-- Quick Actions -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
  <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-600">
    <h2 class="text-xl font-semibold text-gray-900 mb-2">Filing a Claim?</h2>
    <p class="text-gray-600 mb-4">Start with the Plaintiff's Claim form (SC-100) to sue someone in small claims court.</p>
    <%= link_to "Start Your Claim", form_path("SC-100"), class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-600">
    <h2 class="text-xl font-semibold text-gray-900 mb-2">Being Sued?</h2>
    <p class="text-gray-600 mb-4">Use the Defendant's Claim form (SC-120) to file a counter-claim against the plaintiff.</p>
    <%= link_to "File Counter-Claim", form_path("SC-120"), class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 font-medium" %>
  </div>
</div>

<!-- Guided Workflows -->
<% if @featured_workflows.any? %>
  <div class="mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Guided Workflows</h2>
    <p class="text-gray-600 mb-4">Not sure which forms you need? Follow our step-by-step guides.</p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% @featured_workflows.each do |workflow| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= workflow.name %></h3>
          <p class="text-gray-600 text-sm mb-4"><%= workflow.description %></p>
          <div class="flex items-center justify-between">
            <span class="text-sm text-gray-500"><%= workflow.total_steps %> steps</span>
            <%= link_to "Start", workflow_path(workflow), class: "text-blue-600 hover:text-blue-800 font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Popular Forms -->
<div class="mb-12">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold text-gray-900">Popular Forms</h2>
    <%= link_to "View All Forms â†’", forms_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <% @popular_forms.each do |form| %>
      <%= link_to form_path(form.code), class: "block bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow" do %>
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0">
            <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-blue-100 text-blue-600 font-bold text-sm">
              <%= form.code.gsub("SC-", "") %>
            </span>
          </div>
          <div>
            <h3 class="font-medium text-gray-900"><%= form.code %></h3>
            <p class="text-sm text-gray-500 line-clamp-2"><%= form.title %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- How It Works -->
<div class="bg-white rounded-lg shadow-md p-8 mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">How It Works</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <div class="text-center">
      <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 text-blue-600 font-bold text-xl mb-4">1</div>
      <h3 class="font-semibold text-gray-900 mb-2">Choose Your Form</h3>
      <p class="text-gray-600 text-sm">Select from all 51 official California Small Claims Court forms.</p>
    </div>

    <div class="text-center">
      <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 text-blue-600 font-bold text-xl mb-4">2</div>
      <h3 class="font-semibold text-gray-900 mb-2">Fill It Out Online</h3>
      <p class="text-gray-600 text-sm">Complete the form in your browser. Your progress is automatically saved.</p>
    </div>

    <div class="text-center">
      <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-blue-100 text-blue-600 font-bold text-xl mb-4">3</div>
      <h3 class="font-semibold text-gray-900 mb-2">Download & Print</h3>
      <p class="text-gray-600 text-sm">Generate a PDF that matches the official court form, ready to file.</p>
    </div>
  </div>
</div>

<!-- Categories -->
<div class="mb-12">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Browse by Category</h2>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @categories.each do |category| %>
      <%= link_to forms_path(category: category.slug), class: "bg-white rounded-lg shadow p-4 hover:shadow-md transition-shadow text-center" do %>
        <span class="text-gray-900 font-medium"><%= category.name %></span>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Disclaimer -->
<div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-yellow-800">Important Disclaimer</h3>
      <p class="mt-2 text-sm text-yellow-700">
        This tool helps you fill out court forms but does not provide legal advice.
        For legal questions about your case, consult with an attorney or visit the
        <a href="https://selfhelp.courts.ca.gov/small-claims" target="_blank" class="font-medium underline">California Courts Self-Help Center</a>.
      </p>
    </div>
  </div>
</div>
