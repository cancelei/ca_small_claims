<%# PDF Preview Panel - Live preview with auto-refresh %>
<%# locals: form_definition %>

<div class="card bg-base-100 shadow-xl h-[calc(100vh-200px)] min-h-[500px] sticky top-4"
     data-controller="pdf-preview"
     data-pdf-preview-url-value="<%= preview_form_path(form_definition.code) %>"
     data-pdf-preview-debounce-delay-value="1"
     data-pdf-preview-auto-refresh-value="true">

  <%# Header %>
  <div class="card-body p-4 border-b border-base-200 flex-none">
    <div class="flex items-center justify-between">
      <h3 class="font-semibold text-base-content flex items-center gap-2">
        <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Live Preview
      </h3>

      <div class="flex items-center gap-3">
        <%# Auto-refresh toggle %>
        <label class="flex items-center gap-2 cursor-pointer text-sm">
          <input type="checkbox"
                 class="toggle toggle-primary toggle-sm"
                 checked
                 data-pdf-preview-target="autoRefreshToggle"
                 data-action="change->pdf-preview#toggleAutoRefresh">
          <span class="text-base-content/70 hidden sm:inline">Auto</span>
        </label>

        <%# Manual refresh %>
        <button type="button"
                class="btn btn-ghost btn-sm btn-circle"
                data-action="click->pdf-preview#refresh"
                title="Refresh preview">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <%# Preview Container %>
  <div class="flex-1 relative bg-base-200 min-h-0">
    <%# Loading Overlay %>
    <div class="absolute inset-0 flex items-center justify-center bg-base-100/90 z-10 hidden"
         data-pdf-preview-target="loading">
      <div class="flex flex-col items-center gap-3">
        <span class="loading loading-spinner loading-lg text-primary"></span>
        <span class="text-sm text-base-content/70 font-medium">Generating preview...</span>
      </div>
    </div>

    <%# Error State %>
    <div class="absolute inset-0 flex items-center justify-center hidden"
         data-pdf-preview-target="error">
      <div class="text-center p-6">
        <svg class="w-16 h-16 mx-auto text-error/50 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
        <p class="text-base-content/70 mb-4">Failed to load preview</p>
        <button class="btn btn-sm btn-primary" data-action="click->pdf-preview#refresh">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Try Again
        </button>
      </div>
    </div>

    <%# PDF Iframe %>
    <iframe id="pdf-preview-frame"
            data-pdf-preview-target="frame"
            data-action="load->pdf-preview#handleLoad error->pdf-preview#handleError"
            class="w-full h-full border-0"
            title="PDF Preview">
    </iframe>
  </div>

  <%# Footer Actions %>
  <div class="card-body p-4 border-t border-base-200 flex-none">
    <div class="flex gap-2">
      <%= link_to preview_form_path(form_definition.code),
                  target: "_blank",
                  class: "btn btn-outline btn-sm flex-1 gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
        <span class="hidden sm:inline">Open Full</span>
      <% end %>

      <%= link_to download_form_path(form_definition.code),
                  class: "btn btn-primary btn-sm flex-1 gap-1" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
        </svg>
        Download
      <% end %>
    </div>
  </div>
</div>
