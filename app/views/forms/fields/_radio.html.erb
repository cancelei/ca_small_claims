<%# Radio Button Field %>
<div class="form-control w-full mb-4">
  <label class="label">
    <span class="label-text font-medium"><%= field.label || field.name.titleize %></span>
    <% if field.required %>
      <span class="label-text-alt text-error">*</span>
    <% end %>
  </label>

  <div class="flex flex-col gap-2">
    <% field.options&.each do |option| %>
      <label class="label cursor-pointer justify-start gap-3">
        <%= form.radio_button field.name,
          option["value"],
          checked: submission.field_value(field.name) == option["value"],
          required: field.required,
          class: "radio radio-primary",
          data: { action: "change->form#fieldChanged" } %>
        <span class="label-text"><%= option["label"] || option["value"] %></span>
      </label>
    <% end %>
  </div>

  <% if field.help_text.present? %>
    <label class="label w-full text-wrap">
      <span class="label-text-alt text-base-content/70"><%= field.help_text %></span>
    </label>
  <% end %>
</div>
