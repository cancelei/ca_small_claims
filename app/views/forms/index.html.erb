<% content_for :title, "All Forms - CA Small Claims Court" %>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-2">California Small Claims Court Forms</h1>
  <p class="text-gray-600">All 51 official forms, ready to fill out online.</p>
</div>

<!-- Search and Filter -->
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <div class="flex flex-col md:flex-row gap-4">
    <%= form_with url: forms_path, method: :get, local: true, class: "flex-1" do |f| %>
      <div class="relative">
        <%= f.text_field :search,
          value: params[:search],
          placeholder: "Search forms...",
          class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" %>
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
      </div>
    <% end %>

    <div class="flex flex-wrap gap-2">
      <%= link_to "All", forms_path,
        class: "px-3 py-2 rounded-md text-sm font-medium #{@current_category.nil? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>

      <% @categories.each do |category| %>
        <%= link_to category.name, forms_path(category: category.slug),
          class: "px-3 py-2 rounded-md text-sm font-medium #{@current_category&.id == category.id ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Forms Grid -->
<% if @forms.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @forms.each do |form| %>
      <div class="bg-white rounded-lg shadow hover:shadow-md transition-shadow">
        <%= link_to form_path(form.code), class: "block p-4" do %>
          <div class="flex items-start space-x-3">
            <div class="flex-shrink-0">
              <span class="inline-flex items-center justify-center h-12 w-12 rounded-lg bg-blue-100 text-blue-600 font-bold">
                <%= form.code.gsub(/[A-Z]+-/, "") %>
              </span>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-gray-900"><%= form.code %></h3>
              <p class="text-sm text-gray-600 line-clamp-2"><%= form.title %></p>
              <% if form.category.present? %>
                <span class="inline-block mt-2 px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-600">
                  <%= form.category.name %>
                </span>
              <% end %>
            </div>
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No forms found</h3>
    <p class="mt-1 text-sm text-gray-500">Try adjusting your search or filter.</p>
    <%= link_to "Clear filters", forms_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
  </div>
<% end %>
