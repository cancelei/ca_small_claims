<% content_for :title, "#{@submission.form_definition.code} - Submission Details" %>

<div class="mb-6">
  <%= link_to "<- Back to Submissions", submissions_path, class: "text-blue-600 hover:text-blue-800" %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Main Content -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow">
      <div class="p-6 border-b">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900"><%= @submission.form_definition.code %></h1>
            <p class="text-gray-600"><%= @submission.form_definition.title %></p>
          </div>
          <% case @submission.status %>
          <% when "completed" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              Completed
            </span>
          <% when "draft" %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              Draft
            </span>
          <% end %>
        </div>
      </div>

      <!-- Form Data Display -->
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Form Data</h2>

        <% if @submission.form_data.present? %>
          <dl class="divide-y divide-gray-200">
            <% @submission.form_data.each do |key, value| %>
              <% next if value.blank? %>
              <div class="py-3 grid grid-cols-3 gap-4">
                <dt class="text-sm font-medium text-gray-500"><%= key.to_s.titleize %></dt>
                <dd class="text-sm text-gray-900 col-span-2">
                  <% if value.is_a?(Array) %>
                    <%= value.join(", ") %>
                  <% elsif value.is_a?(Hash) %>
                    <pre class="text-xs bg-gray-50 p-2 rounded"><%= JSON.pretty_generate(value) %></pre>
                  <% else %>
                    <%= value %>
                  <% end %>
                </dd>
              </div>
            <% end %>
          </dl>
        <% else %>
          <p class="text-gray-500">No data entered yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Sidebar -->
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow p-6 sticky top-4">
      <h2 class="font-semibold text-gray-900 mb-4">Submission Info</h2>

      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="text-sm text-gray-900"><%= @submission.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="text-sm text-gray-900"><%= @submission.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Completion</dt>
          <dd class="mt-1">
            <div class="flex items-center">
              <div class="w-full bg-gray-200 rounded-full h-2 mr-2">
                <div class="bg-blue-600 h-2 rounded-full" style="width: <%= @submission.completion_percentage %>%"></div>
              </div>
              <span class="text-sm text-gray-600"><%= @submission.completion_percentage %>%</span>
            </div>
          </dd>
        </div>
      </dl>

      <hr class="my-6">

      <div class="space-y-3">
        <% if @submission.completed? %>
          <%= link_to pdf_submission_path(@submission), target: "_blank", class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            View PDF
          <% end %>

          <%= link_to download_pdf_submission_path(@submission), class: "w-full inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            Download PDF
          <% end %>
        <% else %>
          <%= link_to form_path(@submission.form_definition), class: "w-full inline-flex items-center justify-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Continue Editing
          <% end %>
        <% end %>

        <%= button_to submission_path(@submission), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this submission? This cannot be undone." }, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-md text-red-700 bg-white hover:bg-red-50 font-medium" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Submission
        <% end %>
      </div>
    </div>
  </div>
</div>
