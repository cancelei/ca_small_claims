# =============================================================================
# California Small Claims Forms - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed.
# For Docker development, most values are pre-configured in docker-compose.yml

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# For Docker: These are set in docker-compose.yml, no need to change here
# For local: Update to match your PostgreSQL setup
DATABASE_HOST=localhost
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# -----------------------------------------------------------------------------
# Rails Environment
# -----------------------------------------------------------------------------
RAILS_ENV=development
# SECRET_KEY_BASE=  # Generate with: bin/rails secret

# -----------------------------------------------------------------------------
# PDF Generation (Grover/Puppeteer)
# -----------------------------------------------------------------------------
# For Docker, Chromium is pre-installed. For local, install chromium/chrome.
# GROVER_NO_SANDBOX=true
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# -----------------------------------------------------------------------------
# S3 Storage for PDF Templates (IDRIVE)
# -----------------------------------------------------------------------------
# Feature flag: Use S3 for template storage
# Set to "true" to enable S3, "false" to use local lib/pdf_templates/
USE_S3_STORAGE=false

# IDRIVE S3 Configuration (only needed if USE_S3_STORAGE=true)
IDRIVE_ENDPOINT=https://s3.us-west-2.idrivee2.com
IDRIVE_REGION_CODE=us-west-2
IDRIVE_ACCESS_KEY_ID=your_access_key_here
IDRIVE_SECRET_ASSET_KEY=your_secret_key_here
S3_BUCKET_NAME=ca-small-claims-pdfs
