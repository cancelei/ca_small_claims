  "overrides": {
    "js-yaml": "4.1.1"
  },
  "prettier": "prettier-config-ackama",
  "scripts": {
    "build": "./bin/tailwindcss -i ./app/javascript/stylesheets/application.css -o ./app/assets/builds/application.css",
    "build:css": "./bin/tailwindcss -i ./app/javascript/stylesheets/application.css -o ./app/assets/builds/application.css",
    "build:css:prod": "./bin/tailwindcss -i ./app/javascript/stylesheets/application.css -o ./app/assets/builds/application.css --minify",
    "watch:css": "./bin/tailwindcss -i ./app/javascript/stylesheets/application.css -o ./app/assets/builds/application.css --watch",
    "js-lint": "eslint 'app/javascript/**/*.{js,jsx}' 'tests/**/*.{js,jsx}'",
    "js-lint-fix": "eslint --fix 'app/javascript/**/*.{js,jsx}' 'tests/**/*.{js,jsx}'",
    "format-check": "prettier --check .",
    "format-fix": "prettier --write .",
    "css-lint": "stylelint '**/*.css'",
    "css-lint-fix": "stylelint '**/*.css' --fix",
    "test": "jest",
    "watch-tests": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "engines": {
    "node": ">=20.0.0"
  }
